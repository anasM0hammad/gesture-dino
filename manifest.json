{
    "manifest_version": 3,
    "name": "G-Rex",
    "version": "1.1.0",
    "description": "A custom offline Dino game that can be controlled based on hand gestures.",
    "icons": {
        "16": "icons/logo-16.png",
        "48": "icons/logo-48.png",
        "128": "icons/logo-128.png"
    },
    "background": {
        "service_worker": "dist/background.js"
    },
    "action": {
        "default_title": "Play Dino Game",
        "default_icon": "icons/logo-128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["dist/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["game/*", "game/assets/*", "game/mediapipe/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": [],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }

}